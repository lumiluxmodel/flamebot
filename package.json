{
  "name": "flamebot-monorepo",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev:frontend": "turbo run dev --filter=@flamebot/frontend",
    "dev:backend": "turbo run dev --filter=@flamebot/backend",
    "build:frontend": "turbo run build --filter=@flamebot/frontend",
    "build:backend": "turbo run build --filter=@flamebot/backend"
  },
  "devDependencies": {
    "turbo": "^1.13.0"
  },
  "packageManager": "npm@10.2.4",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "pg": "^8.16.0",
    "sqlite3": "^5.1.7"
  }
}
