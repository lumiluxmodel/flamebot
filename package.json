{
  "name": "flamebot-monorepo",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "dev:frontend": "turbo run dev --filter=@flamebot/app",
    "dev:backend": "turbo run dev --filter=@flamebot/backend",
    "build:frontend": "turbo run build --filter=@flamebot/app",
    "build:backend": "turbo run build --filter=@flamebot/backend"
  },
  "devDependencies": {
    "turbo": "^1.13.0"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@heroui/chip": "^2.2.17",
    "pg": "^8.16.0",
    "sqlite3": "^5.1.7"
  }
}
